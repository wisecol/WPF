<UserControl x:Class="DrowDownMenu.UserControlCustomers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrowDownMenu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Background="#FFBF4040" VerticalAlignment="Stretch" CornerRadius="15" Margin="5">
            
        </Border>

        <Border Grid.Column="1" Background="#FF40BFB9" VerticalAlignment="Stretch" CornerRadius="15" Margin="5">

        </Border>

        <Border Grid.Column="2" Background="#FF4068BF" VerticalAlignment="Stretch" CornerRadius="15" Margin="5">

        </Border>

        <Border Grid.Column="3" Background="#FFB940BF" VerticalAlignment="Stretch" CornerRadius="15" Margin="5">

        </Border>

    </Grid>
</UserControl>
